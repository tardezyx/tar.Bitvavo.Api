<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>$(VersionPrefix)1.0.0</Version>
    <Authors>tar</Authors>
    <Copyright>© tar 2024, Germany. GNU GPL v3</Copyright>
    <PackageProjectUrl></PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>bitvavo; bitvavo api; bitvavo rest; bitvavo websocket</PackageTags>
    <NeutralLanguage>en</NeutralLanguage>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <Description>Full Bitvavo API with REST and WebSocket functionality.</Description>
    <RepositoryUrl>https://github.com/tardezyx/tar.Bitvavo.Api</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="True" PackagePath="\" />

    <None Update="LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>

    <PackageReference Include="RestSharp" Version="112.1.0" />

    <PackageReference Include="tar.WebSocket" Version="1.1.0" />
  </ItemGroup>

</Project>
